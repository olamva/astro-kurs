---
interface Props {
  name: string;
  position?: string;
}

const { name, position = "Medlem" } = Astro.props;
---

<div
  class="rounded-lg border flex flex-col items-center border-black dark:border-white size-48 overflow-clip"
>
  <div
    class="p-2 text-center border-b-black dark:border-b-white border-b flex items-center justify-center w-48 h-full"
  >
    <p>Image missing!</p>
  </div>
  <div class="flex items-baseline gap-1">
    <h3 class="text-2xl">{name}</h3>
    <h4 class="text-sm font-thin">{position}</h4>
  </div>
</div>
